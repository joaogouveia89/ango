<% if @bill_history.errors.any? %>
	 <h2>Erros ao salvar o registro de conta:</h2>
	 <ul>
	 <% @bill_history.errors.full_messages.each do |msg|%>
	 <li><%= msg %></li>
	 <% end %>
	 </ul>
<% end %>
<%= form_for @bill_history do |f| %>
   <p>
	  <%= f.label :conta %><br/>
	  <%= f.select :bill_id, options_for_select(Bill.all.map { |bill|[bill.name, bill.id]  }) %><br/>
  </p>
  <p>
	  <%= f.label :mes %><br/>
	  <%= f.select :month, options_for_select((1..12).step(1).to_a.map{|s| ["#{s}", s]}, @bill_history.month) %><br/>
  </p>
  <p>
	  <%= f.label :ano %><br/>
	  <%= f.select :year, options_for_select((Time.current.year..2019).step(-1).to_a.map{|s| ["#{s}", s]}, @bill_history.year)%><br/>
  </p>
  <p>
	  <%= f.label :valor %><br/>
	  <%= f.text_field :value %>
  </p>
    <p>
	 <%= f.submit %>
	</p>
 </p>
<% end %>